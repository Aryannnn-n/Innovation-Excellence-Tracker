<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Student Dashboard</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
      function toggleForm() {
        document.getElementById("submissionForm").classList.toggle("hidden");
      }
    </script>
    <link rel="stylesheet" href="/Hack/public/note.css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
    />
  </head>

  <body class="bg-blue-100 min-h-screen">
    <!-- Floating Navbar -->
    <nav
      class="absolute top-4 left-1/2 transform -translate-x-1/2 bg-blue-500 text-white w-full max-w-6xl py-3 px-6 shadow-lg rounded-xl flex justify-between items-center"
    >
      <div class="flex items-center gap-4">
        <div class="relative">
          <img
            src="/images/technical-support.png"
            alt="User Image"
            class="w-10 h-10 rounded-full cursor-pointer"
            onclick="toggleSlide()"
          />
          <!-- Slide-in Panel -->
          <div
            id="slidePanel"
            class="fixed top-0 left-[-55px] h-screen w-1/3 max-w-md bg-white rounded-xl shadow-lg transform -translate-x-full transition-transform duration-300 z-50"
          >
            <div class="p-6 relative">
              <button
                onclick="toggleSlide()"
                class="absolute top-4 right-4 text-gray-500 hover:text-gray-700 transition"
              >
                <i class="fas fa-times text-xl"></i>
              </button>
              <div class="flex items-center gap-4">
                <img
                  src="/images/technical-support.png"
                  alt="User Image"
                  class="w-10 h-10 rounded-full cursor-pointer"
                />
                <div>
                  <h2 class="text-lg font-bold text-blue-700">
                    Welcome, <%= user.name %>!
                  </h2>
                  <p class="mt-1 text-gray-600">
                    <span class="text-zinc-500 text-sm font-semibold"
                      >ID: <%= user.PRN %></span
                    >
                  </p>
                </div>
              </div>
              <div class="flex flex-col gap-4 mt-4 items-start">
                <div
                  onclick="showSection('profileSection')"
                  class="flex items-center gap-2 w-full p-2 hover:bg-blue-50 rounded-lg transition cursor-pointer"
                >
                  <i class="fas fa-user-circle text-2xl text-blue-500"></i>
                  <span class="text-sm font-semibold text-gray-700"
                    >Profile</span
                  >
                </div>
                <div
                  onclick="showSection('settingsSection')"
                  class="flex items-center gap-2 w-full p-2 hover:bg-blue-50 rounded-lg transition cursor-pointer"
                >
                  <i class="fas fa-cogs text-2xl text-green-500"></i>
                  <span class="text-sm font-semibold text-gray-700"
                    >Settings</span
                  >
                </div>
                <div
                  onclick="showSection('analysisSection')"
                  class="flex items-center gap-2 cursor-pointer"
                >
                  <i class="fas fa-chart-line text-2xl text-purple-500"></i>
                  <span class="text-sm font-semibold text-gray-700"
                    >See Participation Analytics</span
                  >
                </div>
                <div
                  onclick="showSection('postCreationSection')"
                  class="flex items-center gap-2 cursor-pointer"
                >
                  <i class="fas fa-newspaper text-2xl text-orange-500"></i>
                  <span class="text-sm font-semibold text-gray-700"
                    >Create a Post</span
                  >
                </div>
                <div
                  onclick="showSection('submissionSection')"
                  class="flex items-center gap-2 cursor-pointer"
                >
                  <i class="fas fa-file-upload text-2xl text-blue-500"></i>
                  <span class="text-sm font-semibold text-gray-700"
                    >Submit Innovation Proposal</span
                  >
                </div>
                <div
                  onclick="showSection('leaderboardSection')"
                  class="flex items-center gap-2 cursor-pointer"
                >
                  <i class="fas fa-trophy text-2xl text-yellow-500"></i>
                  <span class="text-sm font-semibold text-gray-700"
                    >View Leaderboard</span
                  >
                </div>
                <div class="flex items-center gap-2">
                  <i class="fas fa-envelope text-2xl text-red-500"></i>
                  <span class="text-sm font-semibold text-gray-700"
                    >Messages</span
                  >
                </div>
              </div>
            </div>
          </div>
        </div>

        <script>
          function toggleSlide() {
            const slidePanel = document.getElementById("slidePanel");
            slidePanel.classList.toggle("-translate-x-full");
            document.body.classList.toggle("overflow-hidden");
          }
        </script>
        <style>
          body.overflow-hidden {
            overflow: hidden;
          }
        </style>
        <h1 class="text-xl font-bold">Student Dashboard</h1>
      </div>
      <div class="flex items-center gap-6">
        <!-- Notification Button -->
        <div class="relative">
          <button
            id="notificationBtn"
            class="relative group flex items-center gap-2"
          >
            <i class="fas fa-bell text-xl text-white"></i>
            <span
              id="notificationDot"
              class="absolute top-0 right-0 w-3 h-3 bg-red-500 rounded-full hidden"
            ></span>
          </button>
        </div>

        <!-- Posts Link -->
        <a href="/posts" class="relative group flex items-center gap-2">
          <i class="fas fa-newspaper text-xl text-white"></i>
          <span
            class="absolute left-1/2 transform -translate-x-1/2 bottom-[-35px] bg-blue-200 text-black font-bold text-sm px-2 py-1 rounded opacity-0 group-hover:opacity-100 transition-opacity shadow-lg"
          >
            View Posts
          </span>
        </a>

        <!-- Logout Button -->
        <a href="/user/logout" class="relative group flex items-center gap-2">
          <i class="fas fa-sign-out-alt text-xl text-white"></i>
          <span
            class="absolute left-1/2 transform -translate-x-1/2 bottom-[-35px] bg-blue-200 text-black font-bold text-sm px-2 py-1 rounded opacity-0 group-hover:opacity-100 transition-opacity shadow-lg"
          >
            Logout
          </span>
        </a>
      </div>
    </nav>

    <!-- Notification Dropdown Outside Navbar -->
    <div
      id="notificationDropdown"
      class="fixed top-16 right-8 w-72 bg-white text-black shadow-lg rounded-lg p-3 hidden"
    >
      <h3 class="font-bold text-lg mb-2">ðŸ“¢ Hackathon Notifications</h3>

      <div class="bg-white shadow-md rounded-lg p-4 mt-4">
        <% if (notifications.length> 0) { %> <%
        notifications.forEach(notification=> { %>
        <div class="p-3 border-b border-gray-300">
          <p
            class="<%= notification.type === 'approval' ? 'text-green-600' : 'text-red-600' %>"
          >
            <%= notification.message %>
          </p>
          <%= new Date(notification.createdAt).toLocaleDateString("en-GB") %>
        </div>
        <% }); %> <% } else { %>
        <p class="text-gray-500">No notifications yet.</p>
        <% } %>
      </div>
    </div>

    <!-- Main Content Layout -->
    <div
      class="max-w-6xl mx-auto p-6 bg-blue-50 mb-10 shadow-lg rounded-lg mt-20 flex gap-6"
    >
      <!-- Left Section: Proposal Cards -->
      <div
        class="w-1/3 space-y-4 bg-gray-900 text-white p-6 rounded-xl shadow-lg overflow-y-auto max-h-screen"
      >
        <h2
          class="text-2xl font-bold bg-gradient-to-r from-blue-600 to-purple-600 bg-clip-text text-transparent"
        >
          Your Proposals
        </h2>
        <% if (innovations.length > 0) { %> <%
        innovations.slice().reverse().forEach(innovation=> { %>
        <div
          class="bg-gray-800 p-4 rounded-lg shadow-lg border border-gray-700"
        >
          <h3 class="font-bold text-white">Title: <%= innovation.title %></h3>
          <p class="text-sm text-gray-400">
            Category: <%= innovation.category %> | <%= innovation.date ?
            innovation.date.toISOString().slice(0, 10) : "N/A" %>
          </p>
          <p class="text-sm text-gray-300 mt-2">
            <strong>Status:</strong>
            <span
              class="<%= innovation.status === 'FacultyApproved' || innovation.status === 'AdminApproved' || innovation.status === 'Implemented' ? 'text-green-500' : innovation.status === 'rejected' ? 'text-red-500' : 'text-yellow-500' %>"
            >
              <%= innovation.status === 'FacultyApproved' ? 'Faculty Approved' :
              innovation.status === 'AdminApproved' ? 'Admin Approved' :
              innovation.status === 'Implemented' ? 'Implemented' :
              innovation.status === 'rejected' ? 'Rejected' : 'Pending' %>
            </span>
          </p>

          <!-- Rating -->
          <p>
            <strong>Rating:</strong>
            <span> <%= innovation.rating %> </span>
          </p>

          <div class="flex gap-4 mt-4">
            <a
              href="/uploads/<%= innovation.proposalFile %>"
              target="_blank"
              class="px-4 py-2 bg-gradient-to-r from-blue-600 to-purple-600 text-white text-center rounded-lg shadow-md hover:opacity-80 transition flex-1"
            >
              View Report
            </a>
            <a
              href="/student/uploads/<%= innovation._id %>"
              target="_blank"
              class="px-4 py-2 bg-gradient-to-r from-blue-600 to-purple-600 text-white text-center rounded-lg shadow-md hover:opacity-80 transition flex-1"
            >
              View Form
            </a>
          </div>
        </div>
        <% }); %> <% } else { %>
        <p class="text-gray-500">No submissions yet.</p>
        <% } %>
      </div>

      <!-- Right Section: Forms & Analysis -->
      <div class="w-2/3">
        <h2 class="text-2xl text-blue-700 font-bold">
          Welcome, <%= user.name %>!
        </h2>

        <!-- Default Welcome Section -->
        <div id="welcomeSection" class="mt-6 bg-white p-6 rounded-lg shadow-md">
          <h3 class="text-xl font-bold text-blue-700 mb-3">
            Welcome to Your Innovation Dashboard
          </h3>
          <p class="text-gray-700 mb-4">
            Use the slide-in panel on the left to access different features:
          </p>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div class="bg-blue-50 p-4 rounded-lg">
              <h4 class="font-semibold text-blue-700 mb-2">Create Professional Post</h4>
              <p class="text-sm text-gray-600">Share your insights and achievements with the community</p>
            </div>
            <div class="bg-purple-50 p-4 rounded-lg">
              <h4 class="font-semibold text-purple-700 mb-2">Submit Innovation Proposal</h4>
              <p class="text-sm text-gray-600">Submit your innovative ideas for review</p>
            </div>
            <div class="bg-green-50 p-4 rounded-lg">
              <h4 class="font-semibold text-green-700 mb-2">View Participation Analytics</h4>
              <p class="text-sm text-gray-600">Track your participation and progress</p>
            </div>
            <div class="bg-yellow-50 p-4 rounded-lg">
              <h4 class="font-semibold text-yellow-700 mb-2">View Leaderboard</h4>
              <p class="text-sm text-gray-600">See how you rank among other innovators</p>
            </div>
          </div>
        </div>

        <!-- Post Creation Section -->
        <div id="postCreationSection" class="mt-6 bg-white p-4 rounded-lg shadow-md hidden">
          <h3 class="text-xl font-bold text-blue-700 mb-3">
            Create a Professional Post
          </h3>
          <form
            action="/posts/create"
            method="POST"
            enctype="multipart/form-data"
            class="space-y-4"
          >
            <div>
              <label class="block font-semibold text-gray-700">Title:</label>
              <input
                type="text"
                name="title"
                required
                class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
                placeholder="Enter a professional title for your post..."
              />
            </div>

            <div>
              <label class="block font-semibold text-gray-700">Category:</label>
              <select
                name="category"
                required
                class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
              >
                <option value="General">General</option>
                <option value="Technical">Technical</option>
                <option value="Project Updates">Project Updates</option>
                <option value="Best Practices">Best Practices</option>
                <option value="Events">Events</option>
                <option value="Announcements">Announcements</option>
                <option value="Questions">Questions</option>
              </select>
            </div>

            <div>
              <label class="block font-semibold text-gray-700">Tags:</label>
              <input
                type="text"
                name="tags"
                class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
                placeholder="Enter tags separated by commas (e.g., innovation, technology, research)"
              />
              <p class="text-xs text-gray-500 mt-1">
                Tags help others find your post
              </p>
            </div>

            <div>
              <label class="block font-semibold text-gray-700"
                >Visibility:</label
              >
              <select
                name="visibility"
                class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
              >
                <option value="public">Public (Everyone)</option>
                <option value="department">Department Only</option>
                <option value="private">Private (Only You)</option>
              </select>
            </div>

            <div>
              <label class="block font-semibold text-gray-700"
                >Department:</label
              >
              <select
                name="department"
                required
                class="w-full px-2 py-1 border rounded"
              >
                <option value="" disabled>Select your department</option>
                <option value="CSE" <%= user.department === 'CSE' ? 'selected' : '' %>>Computer Science & Engineering</option>
                <option value="ECE" <%= user.department === 'ECE' ? 'selected' : '' %>>Electronics & Communication</option>
                <option value="Mechanical" <%= user.department === 'Mechanical' ? 'selected' : '' %>>Mechanical Engineering</option>
                <option value="Civil" <%= user.department === 'Civil' ? 'selected' : '' %>>Civil Engineering</option>
                <option value="Biotech" <%= user.department === 'Biotech' ? 'selected' : '' %>>Biotechnology</option>
                <option value="Others" <%= user.department === 'Others' ? 'selected' : '' %>>Others</option>
              </select>
            </div>

            <div>
              <label class="block font-semibold text-gray-700"
                >Description:</label
              >
              <textarea
                name="description"
                required
                class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
                rows="4"
                placeholder="Share your professional insights, achievements, or updates..."
              ></textarea>
            </div>

            <div>
              <label class="block font-semibold text-gray-700"
                >Upload Image:</label
              >
              <input
                type="file"
                name="image"
                accept="image/*"
                required
                class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
              />
              <p class="text-xs text-gray-500 mt-1">
                Add a professional image to make your post stand out
              </p>
            </div>

            <div class="flex items-center">
              <input
                type="checkbox"
                name="isAnnouncement"
                value="true"
                id="isAnnouncement"
                class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded"
              />
              <label
                for="isAnnouncement"
                class="ml-2 block text-sm text-gray-700"
              >
                Mark as Announcement
              </label>
            </div>

            <input type="hidden" name="authorName" value="<%= user.name %>" />
            <input
              type="hidden"
              name="authorRole"
              value="<%= user.role || 'Student' %>"
            />
            <input type="hidden" name="authorId" value="<%= user._id %>" />

            <button
              type="submit"
              class="bg-gradient-to-r from-blue-600 to-purple-600 text-white px-4 py-2 rounded-lg hover:opacity-90 transition"
            >
              <i class="fas fa-paper-plane mr-2"></i> Share Post
            </button>
          </form>
        </div>

        <!-- Submission Form -->
        <div id="submissionSection" class="hidden">
          <h2 class="text-2xl font-bold bg-gradient-to-r from-blue-600 to-purple-700 bg-clip-text text-transparent mt-6 mb-4">
            Submit Your Innovation Proposal
          </h2>

          <form
            id="submissionForm"
            action="/student/innovation/new"
            method="POST"
            enctype="multipart/form-data"
            class="mt-6 p-4 bg-blue-100 rounded-lg shadow"
          >
            <label class="block font-semibold">Title:</label>
            <input
              type="text"
              name="title"
              required
              class="w-full px-2 py-1 border rounded"
            />

            <label class="block font-semibold mt-2">Category:</label>
            <select
              name="category"
              required
              class="w-full px-2 py-1 border rounded"
            >
              <option value="" disabled selected>Select a category</option>
              <option value="Hackathon">Hackathon</option>
              <option value="Startups">Startups</option>
              <option value="Projects">Projects</option>
              <option value="Patents">Patents</option>
              <option value="Awards">Awards</option>
              <option value="Research">Research</option>
            </select>

            <label class="block font-semibold mt-2">Department:</label>
            <select
              name="department"
              required
              class="w-full px-2 py-1 border rounded"
            >
              <option value="" disabled>Select your department</option>
              <option value="CSE" <%= user.department === 'CSE' ? 'selected' : '' %>>Computer Science & Engineering</option>
              <option value="ECE" <%= user.department === 'ECE' ? 'selected' : '' %>>Electronics & Communication</option>
              <option value="Mechanical" <%= user.department === 'Mechanical' ? 'selected' : '' %>>Mechanical Engineering</option>
              <option value="Civil" <%= user.department === 'Civil' ? 'selected' : '' %>>Civil Engineering</option>
              <option value="Biotech" <%= user.department === 'Biotech' ? 'selected' : '' %>>Biotechnology</option>
              <option value="Others" <%= user.department === 'Others' ? 'selected' : '' %>>Others</option>
            </select>

            <label class="block font-semibold mt-2">Description:</label>
            <textarea
              name="description"
              required
              class="w-full px-2 py-1 border rounded"
            ></textarea>

            <label class="block font-semibold mt-2">Key Features:</label>
            <textarea
              name="keyFeatures"
              required
              class="w-full px-2 py-1 border rounded"
            ></textarea>

            <label class="block font-semibold mt-2"
              >Upload Supporting Files (PDF):</label
            >
            <input
              type="file"
              name="proposalFile"
              accept=".pdf"
              required
              class="w-full px-2 py-1 border rounded"
            />

            <label class="block font-semibold mt-2">Collaborators:</label>
            <input
              type="text"
              name="collaborators"
              class="w-full px-2 py-1 border rounded"
            />

            <label class="block font-semibold mt-2">Mentor(s):</label>
            <input
              type="text"
              name="mentors"
              required
              class="w-full px-2 py-1 border rounded"
            />

            <label class="block font-semibold mt-2">Impact & Future Scope:</label>
            <textarea
              name="info"
              required
              class="w-full px-2 py-1 border rounded"
            ></textarea>

            <input type="hidden" name="studentName" value="<%= user.name %>" />
            <button
              type="submit"
              class="mt-4 bg-green-500 text-white px-4 py-2 rounded-full hover:bg-green-600 transition"
            >
              Submit
            </button>
          </form>
        </div>

        <!-- Participation Analysis -->
        <div id="analysisSection" class="hidden">
          <h2
            class="text-2xl font-bold bg-gradient-to-r from-blue-600 to-purple-700 bg-clip-text text-transparent mt-6 mb-4"
          >
            Your Participation Analysis
          </h2>
          <div
            id="canvasContainer"
            class="w-[90%] m-4 flex justify-center"
          >
            <canvas id="StudentChart"></canvas>
          </div>
        </div>

        <!-- Leaderboard Section -->
        <div id="leaderboardSection" class="mt-20 max-w-6xl mx-auto px-4 hidden">
          <div class="bg-white rounded-xl shadow-lg p-6 mb-6">
            <div class="flex justify-between items-center mb-4">
              <h2 class="text-2xl font-bold text-[#372e58]">
                Your Innovation Points
              </h2>
              <a
                href="/leaderboard/participants"
                class="bg-gradient-to-r from-blue-500 to-purple-600 text-white px-6 py-2 rounded-full hover:opacity-90 transition font-medium shadow-md"
              >
                View Full Leaderboard
              </a>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
              <!-- Total Points Card -->
              <div
                class="bg-gradient-to-br from-blue-50 to-purple-50 rounded-xl p-6 shadow-md"
              >
                <div class="flex items-center justify-between">
                  <div>
                    <h3 class="text-lg font-semibold text-gray-700">
                      Total Points
                    </h3>
                    <p class="text-3xl font-bold text-[#372e58] mt-2">
                      <%= user.points?.totalPoints || 0 %>
                    </p>
                  </div>
                  <div class="text-4xl text-blue-500">
                    <i class="fas fa-trophy"></i>
                  </div>
                </div>
              </div>

              <!-- Monthly Points Card -->
              <div
                class="bg-gradient-to-br from-green-50 to-teal-50 rounded-xl p-6 shadow-md"
              >
                <div class="flex items-center justify-between">
                  <div>
                    <h3 class="text-lg font-semibold text-gray-700">
                      Monthly Points
                    </h3>
                    <p class="text-3xl font-bold text-[#372e58] mt-2">
                      <%= user.points?.monthlyPoints || 0 %>
                    </p>
                  </div>
                  <div class="text-4xl text-green-500">
                    <i class="fas fa-star"></i>
                  </div>
                </div>
              </div>

              <!-- Rank Card -->
              <div
                class="bg-gradient-to-br from-purple-50 to-pink-50 rounded-xl p-6 shadow-md"
              >
                <div class="flex items-center justify-between">
                  <div>
                    <h3 class="text-lg font-semibold text-gray-700">
                      Current Rank
                    </h3>
                    <p class="text-3xl font-bold text-[#372e58] mt-2">
                      #<%= user.points?.rank || 'N/A' %>
                    </p>
                  </div>
                  <div class="text-4xl text-purple-500">
                    <i class="fas fa-medal"></i>
                  </div>
                </div>
              </div>
            </div>

            <!-- Recent Achievements -->
            <div class="mt-6">
              <h3 class="text-xl font-semibold text-gray-700 mb-4">
                Recent Achievements
              </h3>
              <div class="space-y-4">
                <% if (user.points?.achievements &&
                user.points.achievements.length > 0) { %> <%
                user.points.achievements.slice(0, 3).forEach(achievement => { %>
                <div
                  class="bg-gray-50 rounded-lg p-4 flex items-center justify-between"
                >
                  <div>
                    <h4 class="font-medium text-gray-800">
                      <%= achievement.title %>
                    </h4>
                    <p class="text-sm text-gray-600">
                      <%= achievement.category %>
                    </p>
                  </div>
                  <div class="text-lg font-semibold text-purple-600">
                    +<%= achievement.points %> pts
                  </div>
                </div>
                <% }) %> <% } else { %>
                <p class="text-gray-500 text-center py-4">
                  No achievements yet. Start submitting innovations to earn
                  points!
                </p>
                <% } %>
              </div>
            </div>
          </div>
        </div>

        <!-- Profile Section -->
        <div id="profileSection" class="mt-6 bg-white p-6 rounded-lg shadow-md hidden">
          <h3 class="text-xl font-bold text-blue-700 mb-4">Student Profile</h3>
          
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <!-- Profile Information -->
            <div class="space-y-4">
              <div class="bg-gray-50 p-4 rounded-lg">
                <h4 class="text-lg font-semibold text-gray-700 mb-2">Personal Information</h4>
                <div class="space-y-2">
                  <div class="flex items-center gap-2">
