    <script>
      // Search functionality
      document.getElementById('studentSearch').addEventListener('input', function(e) {
        const searchTerm = e.target.value.toLowerCase().trim();
        const studentCards = document.querySelectorAll('.student-card');
        let hasResults = false;
        
        studentCards.forEach(card => {
          const prn = card.getAttribute('data-prn').toLowerCase();
          const name = card.querySelector('h3').textContent.toLowerCase();
          
          if (prn.includes(searchTerm) || name.includes(searchTerm)) {
            card.style.display = 'block';
            hasResults = true;
          } else {
            card.style.display = 'none';
          }
        });

        // Show/hide no results message
        let noResultsMsg = document.getElementById('noResultsMessage');
        if (!hasResults) {
          if (!noResultsMsg) {
            noResultsMsg = document.createElement('div');
            noResultsMsg.id = 'noResultsMessage';
            noResultsMsg.className = 'text-center py-4 text-gray-500';
            noResultsMsg.innerHTML = '<i class="fas fa-search mr-2"></i>No students found matching your search';
            document.getElementById('studentList').appendChild(noResultsMsg);
          }
        } else if (noResultsMsg) {
          noResultsMsg.remove();
        }
      });

      // Edit functionality
      function toggleEdit(button) {
        const card = button.closest('.student-card');
        const viewModes = card.querySelectorAll('.view-mode');
        const editModes = card.querySelectorAll('.edit-mode');
        
        viewModes.forEach(el => el.classList.add('hidden'));
        editModes.forEach(el => el.classList.remove('hidden'));
      }

      function cancelEdit(button) {
        const card = button.closest('.student-card');
        const viewModes = card.querySelectorAll('.view-mode');
        const editModes = card.querySelectorAll('.edit-mode');
        
        viewModes.forEach(el => el.classList.remove('hidden'));
        editModes.forEach(el => el.classList.add('hidden'));
      }

      function saveChanges(button) {
        const card = button.closest('.student-card');
        const studentId = card.getAttribute('data-student-id');
        const email = card.querySelector('input[type="email"]').value;
        const prn = card.querySelector('input[type="text"]').value;
        const department = card.querySelector('select').value;

        // Show loading state
        button.disabled = true;
        button.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Saving...';

        // Make API call to update student information
        fetch(`/user/update-student/${studentId}`, {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify({
            email,
            PRN: prn,
            department
          })
        })
        .then(response => response.json())
        .then(data => {
          if (data.success) {
            // Update the display - using more specific selectors
            const emailSpan = card.querySelector('.flex.items-center.gap-2:nth-child(2) .view-mode');
            const prnSpan = card.querySelector('.flex.items-center.gap-2:nth-child(3) .view-mode');
            const deptSpan = card.querySelector('.flex.items-center.gap-2:nth-child(4) .view-mode');
            
            if (emailSpan) emailSpan.textContent = email;
            if (prnSpan) prnSpan.textContent = `PRN: ${prn}`;
            if (deptSpan) deptSpan.textContent = `Department: ${department}`;
            
            // Show success message
            showNotification('Student information updated successfully', 'success');
            
            // Switch back to view mode
            cancelEdit(button);
          } else {
            throw new Error(data.message || 'Failed to update student information');
          }
        })
        .catch(error => {
          console.error('Error:', error);
          showNotification(error.message || 'Error updating student information', 'error');
        })
        .finally(() => {
          // Reset button state
          button.disabled = false;
          button.innerHTML = '<i class="fas fa-save"></i> Save Changes';
        });
      }

      // Add notification function
      function showNotification(message, type = 'success') {
        const notification = document.createElement('div');
        notification.className = `fixed top-4 right-4 p-4 rounded-lg shadow-lg ${
          type === 'success' ? 'bg-green-500' : 'bg-red-500'
        } text-white`;
        notification.innerHTML = `
          <div class="flex items-center gap-2">
            <i class="fas fa-${type === 'success' ? 'check-circle' : 'exclamation-circle'}"></i>
            <span>${message}</span>
          </div>
        `;
        document.body.appendChild(notification);
        
        // Remove notification after 3 seconds
        setTimeout(() => {
          notification.remove();
        }, 3000);
      }
    </script>
