  <script>
    // Toggle Chatbot visibility
    const toggleChatbot = () => {
      const chatCard = document.getElementById('chatCard');
      chatCard.classList.toggle('hidden');
    };

    // Handle chatbot query and display response
    const sendChatPrompt = async () => {
      const prompt = document.getElementById('chatPrompt').value;
      const responseContainer = document.getElementById('chatResponseText');

      if (!prompt) {
        alert('Please enter a query!');
        return;
      }

      // Show loading message while waiting
      responseContainer.textContent = "Loading...";

      try {
        const response = await fetch('/get-res-chat', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ prompt })
        });

        const data = await response.json();
        responseContainer.textContent = data.message;
      } catch (error) {
        console.error('âŒ Error:', error);
        responseContainer.textContent = 'Failed to get chatbot response.';
      }
    };
  </script>
